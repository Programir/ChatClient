<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Chat" Height="350" Width="525">

    <Grid Margin="0,-5,-8,-7" Height="332" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="152,14,-10,292" Grid.Column="3">
        <Run FontSize="16" Foreground="Black" FontWeight="Bold">Простой текстовый чат</Run>
        </TextBlock>

        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="157,56,105,250" Grid.Column="3">
        <Run FontSize="12" Foreground="Black" FontWeight="Bold">Ваш логин</Run>
        </TextBlock>

        <TextBox MaxLength="50" TextWrapping="Wrap" TextChanged="TextBox_Login" Margin="130,78,78,228" Grid.Column="3" RenderTransformOrigin="0.403,0.383"></TextBox>

        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="158,118,104,188" Grid.Column="3">
        <Run FontSize="12" Foreground="Black" FontWeight="Bold">Ваш пароль</Run>
        </TextBlock>

        <PasswordBox PasswordChar="*" MinHeight="30" Margin="130,0,79,161" Height="26" VerticalAlignment="Bottom" Grid.Column="3" />

        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="110,177,152,129" Grid.Column="3">
        <Run FontSize="12" Foreground="Black" FontWeight="Bold">Адрес сервера</Run>
        </TextBlock>

        <TextBox MaxLength="50" TextWrapping="Wrap" TextChanged="Server_IP" Margin="93,203,136,103" Grid.Column="3" RenderTransformOrigin="0.403,0.383"></TextBox>

        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="248,180,14,126" Grid.Column="3">
        <Run FontSize="12" Foreground="Black" FontWeight="Bold">Порт сервера</Run>
        </TextBlock>
        
        <TextBox MaxLength="50" TextWrapping="Wrap" TextChanged="Server_Port" Margin="277,203,42,103" Grid.Column="3" RenderTransformOrigin="0.403,0.383"></TextBox>

        <Button x:Name="ConnectButton" Content="Соединение" IsDefault="True" Click="Connect_Button_Click" Margin="145,262,148,33" RenderTransformOrigin="0.464,0.105" Grid.Column="3" />

        <Button x:Name="EscapeButton" Content="Выход" IsCancel="True" Click="Escape_Button_Click" Margin="296,263,-6,30" RenderTransformOrigin="0.464,0.105" Grid.Column="3" />

    </Grid>
</Window>
