<Window x:Class="Chat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Chat" Height="350" Width="525">

    <Grid Margin="0,-5,-6,-7" Height="332" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Чат" FontSize="16" HorizontalAlignment="Left" Width="44" Margin="244,5,-278,296" Grid.Column="3" />

        <ListBox Name="MessageList" ItemsSource="{Binding MessageList}" Grid.Column="3" Margin="22,38,-68,116" Height="auto" />

        <TextBox MaxLength="500" TextChanged="Message_TextChanged" Margin="23,231,-69,51" Grid.Column="3"/>

        <Button x:Name="ConnectButton" Content="Отправить сообщение" IsDefault="True" Click="Connect_Button_Click" Margin="25,288,268,7" RenderTransformOrigin="0.464,0.105" Grid.Column="3" />

    </Grid>

</Window>
