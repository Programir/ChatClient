<Window x:Class="Chat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Chat" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label Content="Чат" FontSize="16" Grid.Row="0" />

        <ListBox Name="MessageList" ItemsSource="{Binding MessagesList}" Grid.Row="1" />

        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBox MaxLength="500" TextChanged="Message_TextChanged" Grid.Column="0" Margin="0, 0, 5, 0" />
            <Button x:Name="SendButton" Content="Отправить сообщение" IsDefault="True" Click="Send_Button_Click" Grid.Column="1" />

        </Grid>
        
    </Grid>

</Window>